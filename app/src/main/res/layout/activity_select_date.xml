<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".select_date">

    <ImageButton
        android:id="@+id/btnclose"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/close_button"
        android:tint="#FFFFFF"
        android:translationZ="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="401dp"
        android:layout_height="400dp"
        android:layout_marginTop="22dp"
        android:background="#DBF1FF"
        android:selectedWeekBackgroundColor="#DBF1FF"
        android:weekNumberColor="#33FFFFFF"
        android:weekSeparatorLineColor="#19FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectDate" />

    <TextView
        android:id="@+id/txtSelectDate"
        android:layout_width="424dp"
        android:layout_height="218dp"
        android:background="#000000"
        android:paddingTop="30dp"
        android:text="Select Date"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>